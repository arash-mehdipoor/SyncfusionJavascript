@model List<Person>;
@{
    ViewData["Title"] = "Home Page";
}


<div class="sample-browser">
    <div class='content @*e-view*@'>
        <div class='sample-content'>
            <div class="control-content">
                <div class="container-fluid">
                    <div class="control-section">
                        <div class="control-section">
                            <div id="querybuilder" class="row"></div>
                            <div class="e-qb-button">
                                <button id="getdata" class="e-btn e-primary">get Data</button>
                            </div>
                            <div class="SearchBox">
                                <input type="text" placeholder="عبارت مورد نظر را تایپ کنید" id="searchText" class="e-input" />
                                <input type="button" id="searchButton" class="e-control e-btn e-lib" value="جستجو" />
                                <button id="clearButton">پاک کردن</button>
                            </div>
                            <div class="content-wrapper">
                                <div style="padding-bottom: 10px;">
                                    <span id="msg"></span>
                                    <br>
                                </div>
                                <div id="loader">در حال بارگذاری...</div>

                                <div id="Grid">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




<script id="template" type="text/x-template">
        <div class="e-pagertemplate">
        <div class="col-lg-12 control-section">
            <div class="content-wrapper">
        <input id="currentPage" type="text" value=${currentPage}>
            </div>
        </div>

        <div id="totalPages" class="e-pagertemplatemessage" style="margin-top:5px;margin-left:30px;border: none; display: inline-block ">
            <span class ="e-pagenomsg">${currentPage} of ${totalPages} pages (${totalRecordsCount} items)</span>
        </div>
    </div>
</script>




@section Scripts {
<script src="~/lib/syncfusion/js/ej2.min.js"></script>


<script type="text/x-jsrender" id="statusTemplate">
    <div id="myStatus" class="pbar">
           <button class="btn statusButton w-100"></button>
     </div>
</script>

<script type="text/x-jsrender" id="progessTemplate">
    <div id="myProgress" class="pbar">
            <div id="myBar" class="bar">
              <div id="label" class="barlabel"></div>
            </div>
          </div>
</script>

